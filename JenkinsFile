pipeline {
    agent any
    
    stages {
        
        stage('BUILD'){
            steps {
                echo 'Building the Code from Branch and Creating Packaged file out of that.'
            }
            steps {
                build job: 'BUILD_JOB',parameters:[
                    string(name: 'BRANCH_NAME',value: "${params.BRANCH_NAME}")
                    ]
            }
            steps {
                echo 'BUILD is DONE'
            }
        }
        
        stage ('UNIT TESTING'){
            steps {
                build job: 'UNITTEST_JOB'
            }
        }
        stage ('DEPLOY') {
            steps {
                build job: 'DEPLOY_JOB'
            }
        }
    }
}
